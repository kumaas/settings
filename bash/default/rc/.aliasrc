unset ls
alias l='ls -altrF'
unset less
alias less='less -N'
#export PS1=[\\u@\\W]\$\
alias j=jobs
unset grep
alias grep='\grep -I --color=auto'
alias dgrep='\grep --color=auto'
alias ngrep='grep -n'
alias rgrep='grep -r'
alias vi='vim'
alias h='history'
alias diff='colordiff'
alias whoami='echo Batman'
alias ssh='\ssh -C'

fang() {
    if [ "$#" -ne 2 ] || ! [ -d "$1" ]; then
        echo "Usage: DIRECTORY REGEX" >&2
    else
        \find $(readlink -f $1) | \grep --color=auto $2;
    fi
}

fgc() {
    echo -n `fang $@` | xclip -selection clipboard;
    echo `xclip -o -selection clipboard`;
}
