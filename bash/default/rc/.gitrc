wgit() {
    BL='\033[1;34m'
    YL='\033[1;33m'
    GY='\033[0;37m'
    SEP="${YL}|${GY}"
    echo -e "\n${BL}stash${GY} git stash -u $SEP git stash pop $SEP git stash show -p stash@{0}\n"
}

alias xgs='git status'
alias xgpr='git pull --rebase'
alias xgm='git commit -m '
alias xgr='git rebase'
alias xgd='git diff '
alias xgb='git branch '
alias xgpl='git pull'
alias xgph='git push'
